@model IEnumerable<EntityLayer.Concrete.Blog>
@{
    ViewBag.Title = "AdminBlogList";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>Blog Listesi</h2>
<br />
<table class="table table-bordered">
    <tr>
        <th>ID</th>
        <th>Başlık</th>
        <th>Kategori</th>
        <th>Tarih</th>
        <th>Sil</th>
        <th>Güncelle</th>
        <th>Detaylar</th>
        <th>Yorumlar</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.BlogID</td>
            <td>@item.BlogTitle</td>
            <td>@item.Category.CategoryName</td>
            <td>@item.BlogDate.ToShortDateString()</td>
            <td><a href="/Blog/DeleteBlog/@item.BlogID" class="btn btn-danger">Sil</a></td>
            <td><a href="/Blog/UpdateBlog/@item.BlogID" target="_blank" class="btn btn-primary">Güncelle</a></td>
            <td><a href="/Blog/BlogDetails/@item.BlogID" target="_blank" class="btn btn-dark">Detaylar</a></td>
            <td><a href="/Blog/GetCommentByBlog/@item.BlogID" target="_blank" class="btn btn-warning">Yorumlar</a></td>

        </tr>

    }
</table>
<a href="/Blog/AddNewBlog/" class="btn btn-success">Yeni Blog Ekle</a>

